            },
            "spaceAroundSelectorSeparator": {
              "type": "boolean",
              "default": false,
              "description": "Ensure a space character around selector separators \u0027\u003e\u0027, \u0027+\u0027, \u0027~\u0027 (e.g. `a \u003e b`)."
            },
