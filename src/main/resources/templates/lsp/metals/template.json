{
  "id": "metals",
  "name": "Scala Language Server (Metals)",
  "programArgs": {
    "windows": "${workingDir}/metals.bat",
    "default": "${workingDir}/metals"
  },
  "expandConfiguration": true,
  "fileTypeMappings": [
    {
      "fileType": {
        "name": "Scala",
        "patterns": [
          "*.scala",
          "*.sbt",
          "*.sc"
        ]
      },
      "languageId": "scala"
    }
  ]
}